{
  //https://ocelot.readthedocs.io/en/latest/introduction/gettingstarted.html
  "Routes": [
    //User API
    {
      "DownstreamPathTemplate": "/api/User",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5001"
        }
      ],
      "UpstreamPathTemplate": "/User",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    },
    //Post API
    {
      "DownstreamPathTemplate": "/api/Posts",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5003"
        }
      ],
      "UpstreamPathTemplate": "/Posts",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "3s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    {
      "DownstreamPathTemplate": "/api/Posts/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5003"
        }
      ],
      "UpstreamPathTemplate": "/Posts/{id}",
      "UpstreamHttpMethod": [ "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/Comments",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5003"
        }
      ],
      "UpstreamPathTemplate": "/Comments",
      "UpstreamHttpMethod": [ "POST" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "3s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    {
      "DownstreamPathTemplate": "/api/Comments/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5003"
        }
      ],
      "UpstreamPathTemplate": "/Comments/{id}",
      "UpstreamHttpMethod": [ "DELETE" ]
    },
    // Notification API
    {
      "DownstreamPathTemplate": "/api/Notification",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5006"
        }
      ],
      "UpstreamPathTemplate": "/Notification",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "3s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    //Chat API
    {
      "DownstreamPathTemplate": "/api/Messages",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "5005"
        }
      ],
      "UpstreamPathTemplate": "/Messages",
      "UpstreamHttpMethod": [ "GET" ]
    },
    // socket
    {
      "DownstreamPathTemplate": "/hubs/presence",
      "DownstreamScheme": "ws",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5005
        }
      ],
      "UpstreamPathTemplate": "/hubs/presence",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ]
    },
    {
      "DownstreamPathTemplate": "/hubs/message",
      "DownstreamScheme": "ws",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5005
        }
      ],
      "UpstreamPathTemplate": "/hubs/message",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ]
    }
  ],
  "GlobalConfiguration": {
    // url of project OcelotApiGW
    "BaseUrl": "http://localhost:5065"
  }
}
